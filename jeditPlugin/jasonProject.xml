<?xml version="1.0"?>

<!DOCTYPE MODE SYSTEM "xmode.dtd">

<!--	
    Syntax color for Jason projects (see http://jason.sf.net)
	written by Jomi F. Hubner and Rafael H. Bordini
-->

<MODE>
	<PROPS>
		<PROPERTY NAME="lineComment" VALUE="//" />
		<PROPERTY NAME="commentStart" VALUE="/*" />
		<PROPERTY NAME="commentEnd" VALUE="*/" />
	</PROPS>

	<RULES ESCAPE="\" IGNORE_CASE="FALSE" HIGHLIGHT_DIGITS="TRUE">
	
		<!-- Comments -->
		<EOL_SPAN TYPE="COMMENT1">//</EOL_SPAN>
		<!--- ISO compliant C-style comments -->
		<SPAN TYPE="COMMENT1">
			<BEGIN>/*</BEGIN>
			<END>*/</END>
		</SPAN>
		
		<!-- String literals -->
		<SPAN TYPE="COMMENT2" NO_LINE_BREAK="TRUE">
			<BEGIN>"</BEGIN>
			<END>"</END>
		</SPAN>

		<!-- keywords -->
 		<SEQ TYPE="MARKUP">MAS</SEQ>
 		<SEQ TYPE="MARKUP">agents</SEQ>
 		<SEQ TYPE="MARKUP">environment</SEQ>
 		<SEQ TYPE="MARKUP">executionControl</SEQ>
 		<SEQ TYPE="MARKUP">infrastructure</SEQ>

 		<SEQ TYPE="COMMENT3">at</SEQ>
 		<SEQ TYPE="COMMENT3">events</SEQ>
 		<SEQ TYPE="COMMENT3">intBels</SEQ>
 		<SEQ TYPE="COMMENT3">nrcbp</SEQ>
 		<SEQ TYPE="COMMENT3">verbose</SEQ>
 		<SEQ TYPE="COMMENT3">synchronised</SEQ>
 		<SEQ TYPE="COMMENT3">agentClass</SEQ>
 		<SEQ TYPE="COMMENT3">agentArchClass</SEQ>


		<!-- values -->
 		<SEQ TYPE="COMMENT2">Centralised</SEQ>
 		<SEQ TYPE="COMMENT2">Saci</SEQ>

 		<SEQ TYPE="FUNCTION">discard</SEQ>
 		<SEQ TYPE="FUNCTION">requeue</SEQ>
 		<SEQ TYPE="FUNCTION">retrieve</SEQ>
 		<SEQ TYPE="FUNCTION">sameFocus</SEQ>
 		<SEQ TYPE="FUNCTION">newFocus</SEQ>
 		<SEQ TYPE="FUNCTION">true</SEQ>
 		<SEQ TYPE="FUNCTION">false</SEQ>

		<!-- Parentheses -->
		<SEQ TYPE="MARKUP">{</SEQ>
		<SEQ TYPE="MARKUP">}</SEQ>		

		<KEYWORDS>
		</KEYWORDS>
		
	</RULES>

</MODE>
